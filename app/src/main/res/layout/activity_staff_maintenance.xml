<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.audio.yametech.myfos.Activity.StaffMaintenanceActivity">

    <Button
        android:id="@+id/deleteStaffButton"
        android:layout_width="85dp"
        android:layout_height="158dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="297dp"
        android:onClick="deleteStaffButtonPressed"
        android:text="Delete Staff"
        app:layout_constraintRight_toLeftOf="@+id/updateStaffButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/updateStaffListView"
        android:layout_width="650dp"
        android:layout_height="419dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView63"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:text="ID"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView64"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView63"
        android:layout_marginLeft="59dp" />

    <Button
        android:id="@+id/updateStaffButton"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginRight="16dp"
        android:onClick="updateStaffButtonPressed"
        android:text="Update Staff"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/addStaffButton" />

    <Button
        android:id="@+id/addStaffButton"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="297dp"
        android:onClick="addStaffButtonPressed"
        android:text="Add Staff"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView63"
        android:layout_marginLeft="167dp" />

    <TextView
        android:id="@+id/textView66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView63"
        android:layout_marginLeft="247dp" />

    <TextView
        android:id="@+id/textView67"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView63"
        android:layout_marginLeft="336dp" />

    <TextView
        android:id="@+id/textView71"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Joined"
        app:layout_constraintLeft_toRightOf="@+id/textView67"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textView72"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Leave"
        app:layout_constraintLeft_toRightOf="@+id/textView71"
        android:layout_marginLeft="34dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />
</android.support.constraint.ConstraintLayout>
