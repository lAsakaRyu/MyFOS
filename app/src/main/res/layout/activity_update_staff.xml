<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <RadioGroup
        android:id="@+id/genderRadioGroup"
        android:layout_width="220dp"
        android:layout_height="43dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/updateIDEditText"
        android:layout_marginLeft="120dp">

        <RadioButton
            android:id="@+id/maleRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Male"
            tools:layout_editor_absoluteX="170dp"
            tools:layout_editor_absoluteY="364dp" />

        <RadioButton
            android:id="@+id/femaleRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Female"
            tools:layout_editor_absoluteX="81dp"
            tools:layout_editor_absoluteY="4dp" />

    </RadioGroup>

    <EditText
        android:id="@+id/updateIDEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="16dp"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:hint="ID"
        android:imeOptions="flagNoEnterAction"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/updateNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateIDEditText"
        android:layout_marginStart="140dp" />

    <TextView
        android:id="@+id/textView49"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="29dp"
        android:text="Staff ID"
        app:layout_constraintRight_toLeftOf="@+id/updateIDEditText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView57"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="34dp"
        android:text="Staff Name"
        app:layout_constraintRight_toLeftOf="@+id/updateNameEditText"
        app:layout_constraintTop_toBottomOf="@+id/textView49" />

    <TextView
        android:id="@+id/textView58"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Position"
        app:layout_constraintTop_toBottomOf="@+id/textView57"
        app:layout_constraintRight_toLeftOf="@+id/positionSpinner"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/textView59"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:text="Contact"
        app:layout_constraintTop_toBottomOf="@+id/textView58"
        app:layout_constraintRight_toLeftOf="@+id/updateContactEditText"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/textView60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="34dp"
        android:text="E-mail"
        app:layout_constraintTop_toBottomOf="@+id/textView59"
        app:layout_constraintRight_toLeftOf="@+id/updateEmailEditText"
        android:layout_marginRight="16dp" />

    <Spinner
        android:id="@+id/statusSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="140dp"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/updateEmailEditText"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView62"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        app:layout_constraintRight_toLeftOf="@+id/statusSpinner"
        android:layout_marginRight="16dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/textView60"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/confirmUpdateStaffButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        app:layout_constraintLeft_toRightOf="@+id/updateEmailEditText"
        android:layout_marginLeft="58dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/updateICEditText"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="12dp"
        android:onClick="cancelUpdateStaffButtonPressed"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/resetFormButton"
        app:layout_constraintRight_toRightOf="parent" />

    <Spinner
        android:id="@+id/positionSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/updateNameEditText"
        android:layout_marginLeft="140dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/updateContactEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:hint="e.g. 0163844970"
        android:inputType="phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateNameEditText" />

    <EditText
        android:id="@+id/updateEmailEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateContactEditText" />

    <TextView
        android:id="@+id/textView68"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="29dp"
        app:layout_constraintRight_toLeftOf="@+id/genderRadioGroup"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/textView69"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Birth"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/textView70"
        app:layout_constraintRight_toLeftOf="@+id/updateDOBEditText"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/textView70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IC"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/textView68"
        app:layout_constraintRight_toLeftOf="@+id/updateICEditText"
        android:layout_marginRight="16dp" />

    <EditText
        android:id="@+id/updateICEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="e.g. 970922143443"
        android:imeOptions="actionDone"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@+id/updateNameEditText"
        app:layout_constraintTop_toBottomOf="@+id/genderRadioGroup" />

    <EditText
        android:id="@+id/updateDOBEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="8dp"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:hint="Waiting for IC . . ."
        android:imeOptions="actionDone"
        android:inputType="date"
        app:layout_constraintLeft_toRightOf="@+id/updateContactEditText"
        app:layout_constraintTop_toBottomOf="@+id/updateICEditText" />

    <Button
        android:id="@+id/resetFormButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="12dp"
        android:onClick="resetFieldButtonPressed"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/confirmUpdateStaffButton" />

</android.support.constraint.ConstraintLayout>